<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormNewsActivity2">


    <TextView
        android:layout_width="368dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Редактирование"
        android:textColor="#f02525"
        android:textSize="35dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="306dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:id="@+id/id_formnews2_image"
                android:layout_height="303dp"/>

            <TextView
                android:id="@+id/id_formnews2_download_image"
                android:layout_width="306dp"
                android:layout_height="42dp"
                android:backgroundTint="#f02525"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/purple_200"
                android:gravity="center"
                android:text="загрузите фотографию"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_formnews2_name"
                android:layout_width="306dp"
                android:layout_height="50dp"
                android:backgroundTint="#f02525"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="животное и его имя"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/id_formnews2_text"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:backgroundTint="#f02525"
                android:hint="все подробности о животном и его пропаже"
                android:textColor="@color/black" />
            <Button
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="сохранить"
                android:backgroundTint="#f02525"
                android:id="@+id/id_formnews2_save"
                android:layout_height="70dp"/>

        </LinearLayout>

    </ScrollView>




</LinearLayout>