<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FormNewsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/id_formnews_image"
            android:layout_width="306dp"
            android:layout_height="303dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/id_formnews_download_image"
            android:layout_width="304dp"
            android:backgroundTint="#f02525"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="загрузите фотографию"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/id_formnews_name"
            android:layout_width="303dp"
            android:backgroundTint="#f02525"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="животное и его имя"
            android:textColor="@color/black" />
        <EditText
            android:layout_width="300dp"
            android:gravity="center"
            android:backgroundTint="#f02525"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:id="@+id/id_formnews_text"
            android:layout_marginTop="10dp"
            android:hint="все подробности о животном и его пропаже"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#f02525"
            android:layout_gravity="center"
            android:text="сохранить"
            android:id="@+id/id_formnews_save"
            android:layout_height="70dp"/>
        </LinearLayout>

    </ScrollView>







</LinearLayout>