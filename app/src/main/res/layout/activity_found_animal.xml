<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoundAnimalActivity">


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#f02525"
        android:text="напишите сообщение хозяину"
        android:layout_height="150dp"/>

    <EditText
        android:id="@+id/id_fa_et"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#f02525"
        android:gravity="center"
        android:hint="введите сообщение..."
        android:textColor="@color/black" />
    <EditText
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/id_fa_et_mobile"
        android:hint="телефон"
        android:textColor="@color/black"
        android:backgroundTint="#f02525"
        android:layout_marginLeft="40dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/id_fa_et_name"
        android:hint="имя"
        android:textColor="@color/black"
        android:backgroundTint="#f02525"
        android:layout_marginLeft="40dp"
        android:layout_height="40dp"/>


    <Button
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:backgroundTint="#f02525"
        android:layout_marginTop="20dp"
        android:text="отправить"
        android:id="@+id/id_fa_button"
        android:layout_height="80dp"/>

</LinearLayout>